<style type="text/css">
  .container {
    margin: 20px auto;
    width: 600px;
    padding: 0px 20px 20px 20px;
    border: 1px dotted black;
  }
  th {
    text-align: left;
  }
</style>

<div class="container">  

<h1>You are in <%= @category.name %> </h1>

<% @category.posts.each do |post| %>
<li><a href="/post/<%= post.id %>"><%= post.name %></a></li>
<% end %>

</div>
